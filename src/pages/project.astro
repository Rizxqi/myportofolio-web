<style>
  /* Projects Section */
  .projects {
    padding: 100px 0;
    background: var(--color-bg);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .project-card {
    display: flex;
    flex-direction: column;
    background: var(--color-surface);
    border-radius: 15px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    overflow: hidden;
    height: 500px;
  }

  .project-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 30px rgba(59, 130, 246, 0.3);
  }

  .project-image {
    position: relative;
    height: 200px;
    overflow: hidden;
    background: linear-gradient(
      135deg,
      var(--color-primary-light) 0%,
      var(--color-primary) 100%
    );
  }

  /* Image styling */
  .project-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
    transition: transform 0.5s ease;
  }

  .project-card:hover .project-img {
    transform: scale(1.1);
  }

  /* Fallback placeholder - hanya muncul jika gambar gagal load */
  .image-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    letter-spacing: 2px;
    z-index: 0;
  }

  /* Sembunyikan placeholder jika gambar berhasil load */
  .project-img:not([src=""]) ~ .image-placeholder {
    display: none;
  }

  .project-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 2;
  }

  .project-card:hover .project-overlay {
    opacity: 1;
  }

  .project-links {
    display: flex;
    gap: 15px;
  }

  .project-link {
    width: 50px;
    height: 50px;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #333;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .project-link:hover {
    background: var(--color-primary);
    color: white;
    transform: scale(1.1);
  }

  .project-info {
    padding: 20px;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .project-info h3 {
    color: var(--color-text);
    font-size: 1.4rem;
    margin-bottom: 10px;
    font-weight: 700;
  }

  .project-description {
    flex: 1;
    margin-bottom: 15px;
    overflow-y: auto;
    max-height: 120px;
    padding-right: 5px;
  }

  /* Custom Scrollbar */
  .project-description::-webkit-scrollbar {
    width: 6px;
  }

  .project-description::-webkit-scrollbar-track {
    background: transparent;
  }

  .project-description::-webkit-scrollbar-thumb {
    background: transparent;
    border-radius: 3px;
    transition: background 0.3s ease;
  }

  .project-card:hover .project-description::-webkit-scrollbar-thumb {
    background: #3b82f6;
  }

  .project-description::-webkit-scrollbar-thumb:hover {
    background: #1e40af;
  }

  .project-description {
    scrollbar-color: transparent transparent;
  }

  .project-card:hover .project-description {
    scrollbar-color: #3b82f6 transparent;
  }

  .project-description p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    font-size: 0.9rem;
    margin: 0;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .tag {
    background: var(--color-bg);
    color: var(--color-primary);
    padding: 4px 8px;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 500;
    border: 1px solid var(--color-border);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }

    .project-card {
      height: 450px;
    }

    .project-description {
      max-height: 100px;
    }
  }

  @media (max-width: 640px) {
    .project-card {
      height: 420px;
    }

    .projects {
      padding: 80px 0;
    }
  }
</style>
