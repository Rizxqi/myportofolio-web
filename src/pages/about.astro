<style>
  /* About Section */
  .about {
    padding: 150px 0 100px;
    min-height: 100vh;
    background: var(--color-surface);
  }

  .about-container {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 4rem;
    align-items: center;
  }

  .image-placeholder-about {
    width: 100%;
    height: 500px;
    background: linear-gradient(
      135deg,
      var(--color-primary-light) 0%,
      var(--color-primary) 100%
    );
    border: 3px solid var(--color-border);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(59, 130, 246, 0.2);
    overflow: hidden;
    position: relative;
  }

  .image-placeholder-about::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0) 100%
    );
  }

  .image-placeholder-about img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-placeholder-about p {
    color: white;
    font-weight: 600;
    letter-spacing: 2px;
    z-index: 1;
  }

  .about-text {
    color: var(--color-text-secondary);
    line-height: 1.8;
    margin-bottom: 1.5rem;
    font-weight: 400;
  }

  .about-text strong {
    color: var(--color-primary);
    font-weight: 600;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .social-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--color-bg);
    color: var(--color-text);
    padding: 0.7rem 1.2rem;
    text-decoration: none;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 500;
    border: 1px solid var(--color-border);
    transition: all 0.3s ease;
  }

  .social-button svg {
    color: var(--color-primary);
  }

  .social-button:hover {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
  }

  .social-button:hover svg {
    color: white;
  }

  .download-button {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    background: var(--color-primary);
    color: white;
    border: none;
    padding: 1rem 2rem;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    border-radius: 8px;
    transition: all 0.3s ease;
    text-decoration: none;
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
  }

  .download-button:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.4);
  }

  .profile-image {
    width: 400px; /* sesuaikan */
    height: 500px; /* sesuaikan */
    object-fit: cover;
    border-radius: 16px;
    border: 3px solid var(--color-border);
    box-shadow: 0 20px 60px rgba(59, 130, 246, 0.12);
  }
  @media (max-width: 640px) {
    .profile-image {
      width: 100%;
      height: 400px;
    }
  }

  /* Timeline Section */
  .timeline {
    padding: 100px 0;
    background: var(--color-bg);
  }

  .timeline-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-top: 3rem;
  }

  .timeline-heading {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    color: var(--color-text);
    font-size: 1.5rem;
    margin-bottom: 2rem;
    font-weight: 700;
  }

  .timeline-heading svg {
    color: var(--color-primary);
  }

  .timeline-item {
    position: relative;
    padding-left: 2.5rem;
    margin-bottom: 2.5rem;
  }

  .timeline-dot {
    position: absolute;
    left: 0;
    top: 0;
    width: 16px;
    height: 16px;
    background: var(--color-primary);
    border: 3px solid var(--color-surface);
    border-radius: 50%;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
  }

  .timeline-item::before {
    content: "";
    position: absolute;
    left: 7px;
    top: 16px;
    bottom: -20px;
    width: 2px;
    background: var(--color-border);
  }

  .timeline-item:last-child::before {
    display: none;
  }

  .timeline-date {
    display: inline-block;
    color: var(--color-primary);
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .timeline-content h4 {
    color: var(--color-text);
    font-size: 1.1rem;
    margin-bottom: 0.4rem;
    font-weight: 600;
  }

  .timeline-content p {
    color: var(--color-text-secondary);
    font-size: 0.95rem;
    line-height: 1.6;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .about-container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .about-image {
      order: -1;
    }

    .timeline-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }

  @media (max-width: 640px) {
    .about {
      padding: 120px 0 80px;
    }

    .timeline {
      padding: 80px 0;
    }

    .image-placeholder-about {
      height: 400px;
    }

    .social-links {
      flex-direction: column;
    }

    .social-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>
